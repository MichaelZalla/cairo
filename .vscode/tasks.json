{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "restart",
      "command": "${command:workbench.action.tasks.restartTask}",
      "args": [],
      "problemMatcher": []
    },
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "Rust: cargo build"
    },
    {
      "type": "cargo",
      "command": "build",
      "args": ["--release"],
      "problemMatcher": ["$rustc"],
      "label": "Rust: cargo build --release"
    },
    {
      "type": "cargo",
      "command": "run",
      "args": ["--features", "debug_print_feature"],
      "problemMatcher": ["$rustc"],
      "label": "Rust: cargo run"
    }
  ]
