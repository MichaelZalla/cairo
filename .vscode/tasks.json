{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "restart",
      "command": "${command:workbench.action.tasks.restartTask}",
      "args": [],
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-l",
        "./scripts/build.sh"
      ],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "Rust: cargo build"
    },
    {
      "type": "shell",
      "command": "/opt/homebrew/bin/cargo",
      "args": ["build", "--release"],
      "problemMatcher": ["$rustc"],
      "label": "Rust: cargo build --release"
    },
    {
      "type": "shell",
      "command": "/opt/homebrew/bin/cargo",
      "args": ["run", "--features", "dead_code", "debug_print_feature", "edition2021"],
      "problemMatcher": ["$rustc"],
      "label": "Rust: cargo run"
    }
  ]
}
